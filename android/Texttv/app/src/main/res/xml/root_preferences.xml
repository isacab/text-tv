<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <PreferenceCategory app:title="@string/appearance_header">

    <ListPreference
      android:defaultValue="true"
      android:entries="@array/fontEntries"
      android:entryValues="@array/fontValues"
      android:key="font"
      android:title="Typsnitt" />
    <ListPreference
      android:defaultValue="1"
      android:entries="@array/headerSizeEntries"
      android:entryValues="@array/headerSizeValues"
      android:key="headerSize"
      android:summary="Storlek på rubriker"
      android:title="Rubriker" />
    <ListPreference
      android:defaultValue="1"
      android:entries="@array/zoomLevelEntries"
      android:entryValues="@array/zoomLevelValues"
      android:key="zoomLevel"
      android:title="Zoom" />
    <SwitchPreference
      android:defaultValue="false"
      android:key="backgroundNoRepeat"
      android:title="Background no-repeat" />

  </PreferenceCategory>

  <PreferenceCategory app:title="@string/user_insterface_header">
    <SwitchPreference
      android:defaultValue="true"
      android:key="swipePageNavigation"
      android:title="Svep för att byta sida" />
    <SwitchPreference
      android:defaultValue="true"
      android:key="swipeRefresh"
      android:title="Svep för att uppdatera" />
  </PreferenceCategory>

</PreferenceScreen>
